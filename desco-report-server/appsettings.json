{
  "Serilog": {
    "Using": ["Serilog.Sinks.Console", "Serilog.Sinks.File"],
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Warning",
        "Microsoft.AspNetCore": "Warning",
        "System": "Warning"
      }
    },
    "WriteTo": [
      {
        "Name": "Console"
      },
      {
        "Name": "File",
        "Args": {
          "path": "logs/desco-report-.log",
          "rollingInterval": "Day",
          "retainedFileCountLimit": 7
        }
      }
    ],
    "Properties": {
      "Application": "desco-report-server"
    }
  },
  "AllowedHosts": "*",
  "ConnectionStrings": {
    "DefaultConnection": "Host=localhost;Database=desco_report;Username=postgres;Password=postgres",
    "Redis": "localhost:8765"
  },
  "DependencyCheck": {
    "Enabled": true,
    "MaxRetries": 30,
    "RetryDelayMilliseconds": 2000,
    "HealthCheckTimeoutMilliseconds": 5000,
    "ExcludedServices": []
  },
  "Jwt": {
    "Key": "YourSecretKeyForAuthenticationOfMinimumLength32Characters",
    "Issuer": "desco-report-server",
    "Audience": "desco-report-ui",
    "ExpireMinutes": 60
  }
}