# DESC Report Server Environment Configuration
# Copy this file to .env and update the values

# Database Configuration
POSTGRES_USER=desco_user
POSTGRES_PASSWORD=change_this_secure_password
POSTGRES_DB=desco_report_db

# Redis Configuration
REDIS_PASSWORD=change_this_redis_password

# JWT Configuration
JWT_SECRET_KEY=your-super-secret-jwt-key-must-be-at-least-32-characters-long
JWT_ISSUER=desco-report-server
JWT_AUDIENCE=desco-users
JWT_EXPIRATION_HOURS=24

# ASP.NET Core Configuration
ASPNETCORE_ENVIRONMENT=Development
ASPNETCORE_URLS=http://+:8080

# External API Configuration
DESCO_API_BASE_URL=https://desco.org.bd/api
DESCO_API_TIMEOUT=30

# Email Configuration (for notifications)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your-email@gmail.com
SMTP_PASSWORD=your-app-password
SMTP_FROM_EMAIL=noreply@desco-reports.com

# Logging Configuration
LOG_LEVEL=Information
LOG_FILE_PATH=logs/desco-server-.log

# Hangfire Configuration (Background Jobs)
HANGFIRE_DASHBOARD_ENABLED=true
HANGFIRE_DASHBOARD_PATH=/hangfire

# Rate Limiting
RATE_LIMIT_PER_MINUTE=60
RATE_LIMIT_PER_HOUR=1000

# Security
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://localhost:8080
FORCE_HTTPS=false